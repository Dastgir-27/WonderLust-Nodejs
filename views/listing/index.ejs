<% layout("/layouts/boilerplate") %>
<%- include("../includes/categories.ejs")%>
    <!-- <h3>All Listing</h3> -->

<style>
    .div-card-btn{
        display: flex;
        align-self: center;
        display: none;
    }
    .card-btn{
        color: #fe424d;
        background-color: white;
        border: 1px solid #fe424d;
        border-radius: 2rem;
        padding: 2px 10px 2px 10px;
    }
    @media (max-width: 600px) {
        .div-card-btn{
            display: inline;
        }
    }
</style>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(listing of allListing){%>
        <a href="/listing/<%= listing.id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listingImg" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body"> 
                    <p class="card-text"><b><%=listing.title%></b><br>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%> /night <i class="tax-info">&nbsp;&nbsp; +18% GST</i></p>
                </div>
                <div class="div-card-btn">
                    <form action="/listing/<%=listing.id%>">
                        <button type="button" class="card-btn">Show</button>
                    </form>
                </div>
            </div>
        </a>
    <%}%>
</div>
<script src="/js/search.js"></script>
