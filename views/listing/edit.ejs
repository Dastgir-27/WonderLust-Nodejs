<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="post" action="/listing/<%=oneListing.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%=oneListing.title%>" class="form-control" required>     <!-- name="listing[title]" and all other names like this will be in an object named as listing-->
                    <div class="invalid-feedback">Title is required</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text" class="form-control" required><%=oneListing.description%></textarea>
                    <div class="invalid-feedback">Description is required</div>
                </div>
                <div class="mb-3">
                    <p>Original Listing Image</p>
                    <img src="<%= originalImageUrl%>" alt="Listing Image">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" type="file" value="<%=oneListing.image%>" class="form-control" >
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" value="<%=oneListing.price%>" class="form-control" required>
                        <div class="invalid-feedback">Enter valid price</div>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" value="<%=oneListing.location%>" class="form-control" required>
                        <div class="invalid-feedback">Location is required</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" value="<%=oneListing.country%>" class="form-control" required>
                    <div class="invalid-feedback">Country is required</div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>

